{
	"schemaVersion": 1,
	"id": "vegan-fishing",
	"version": "${version}",
	"name": "Vegan fishing",
	"description": "A Fabric mod for Minecraft Java 1.21.1 that replaces the fish loot table with plant-based and ocean-themed alternatives, allowing players to enjoy the relaxing fishing minigame without harming any virtual wildlife.",
	"authors": [
		"dev@rizza.social"
	],
	"contact": {
		"homepage": "https://modrinth.com/project/vegan-fishing",
		"sources": "https://github.com/RossKeen/minecraft-vegan-fishing"
	},
	"license": "CC0-1.0",
	"icon": "assets/vegan-fishing/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"social.rizza.veganfishing.VeganFishing"
		],
		"client": [
			"social.rizza.veganfishing.VeganFishingClient"
		],
		"fabric-datagen": [
			"social.rizza.veganfishing.VeganFishingDataGenerator"
		]
	},
	"mixins": [
		"vegan-fishing.mixins.json",
		{
			"config": "vegan-fishing.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.18.4",
		"minecraft": "~1.21.11",
		"java": ">=21",
		"fabric-api": "*"
	}
}